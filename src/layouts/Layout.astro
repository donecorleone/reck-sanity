---
import "../styles/global.css"
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { ClientRouter, fade, slide  } from 'astro:transitions';


interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />
    <meta
      name="description"
      content="Reck Haustechnik bietet innovative, nachhaltige Lösungen für Heizung, Lüftung und Gebäudetechnik – für mehr Energieeffizienz und Komfort in Ihrem Zuhause."
    />
    <ClientRouter />
    <title>{title}</title>
   
    

  </head>
  <body>

      <header>  
        <Header />
      </header>
      <main>
        <slot />
      </main>
      <footer class="footer">
        <Footer />
      </footer>
      <script src="https://unpkg.com/split-type"></script>
  </body>
</html>

<style>


</style>


<style is:global>



  html {
    background-color: var(--white);
    font-family: var(--font-family-sans), var(--font-family-serif), sans-serif;
    text-size-adjust: 100%;
  }

  body {
    margin: 0;
    font-family: 'Poppins', sans-serif;
  }
  
::-webkit-scrollbar {
    display: none;
    }

    /* Hide scrollbar for IE, Edge and Firefox */
    html {
    scrollbar-width: none; /* IE and Edge */
    -ms-overflow-style: none;  /* IE 10+ */
    }

    body {
    overflow: -moz-scrollbars-none; /* Firefox */
    -ms-overflow-style: none; /* IE 10+ */
    }

    /* Initial Set-up */
    *,
    *:before,
    *:after {
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    input,
    textarea {
        width: 100%;
        height: 8rem;
        padding: 1rem;
        background: rgba(249, 250, 250, 0.5);
        border: 1px solid #21212144;
        border-radius: 1rem;
        outline-color: var(--color-blue);
    }
    textarea {
        min-height: 16rem;
        height: auto;
        resize: vertical;
    }

    input::placeholder {
        vertical-align: middle;
    }


    ::-webkit-scrollbar {
        display: none;
    }

    h1 {
      font-size: 60px;
      line-height: 1.1;
      font-family: 'Poppins';
    }

    h2 {
      font-size: 50px;  
      line-height: 1.1;  
    }

    h3 {
      font-size: 40px;
    }

    h4 {
      font-size: 32px;
    }

    h5 {
      font-size: 28px;
    }

    h6 {
      font-size: 24px;
    }

    p {
        font-size: 18px;
        font-weight: 300;
        color: rgb(66, 66, 66);
    }

    b {
      font-weight: 600;
    }


    @media screen and (max-width: 769px) {
      h1 {
        font-size: 32px;
        line-height: 1.1;
      }
    }

 
</style>